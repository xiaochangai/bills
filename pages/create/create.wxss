/* pages/create/create.wxss */
.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  margin-bottom: 40rpx;
  background: white;
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.input,
.picker-view,
.textarea {
  width: 100%;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.picker-view {
  color: #333;
}

.submit-btn {
  margin-top: 60rpx;
  background: #07c160;
  color: white;
  border-radius: 48rpx;
}

.submit-btn::after {
  border: none;
}