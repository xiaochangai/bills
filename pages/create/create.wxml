<!--pages/create/create.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="form-item">
      <text class="label">金额</text>
      <input 
        name="amount"
        type="number"
        placeholder="请输入金额"
        class="input"
      />
    </view>

    <view class="form-item">
      <text class="label">类型</text>
      <picker 
        name="type" 
        range="{{types}}"
        class="picker"
      >
        <view class="picker-view">{{types[currentType] || '请选择类型'}}</view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">日期</text>
      <picker 
        name="date"
        mode="date"
        value="{{currentDate}}"
        class="picker"
      >
        <view class="picker-view">{{currentDate}}</view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">备注</text>
      <textarea 
        name="remark"
        placeholder="选填备注"
        class="textarea"
      />
    </view>

    <button formType="submit" class="submit-btn" hover-class="none">提交</button>
  </form>
</view>